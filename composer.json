{
    "name": "slimkit/slimkit",
    "description": "Slim 4 starter kit for REST APIs and Twig-based SSR.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.14",
        "php-di/php-di": "^6.4",
        "nyholm/psr7": "^1.5",
        "vlucas/phpdotenv": "^5.6",
        "twig/twig": "^3.8",
        "slim/twig-view": "^3.3",
        "respect/validation": "^2.2",
        "slim/csrf": "^1.0",
        "tuupola/cors-middleware": "^1.3",
        "bepsvpt/secure-headers": "^9.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.52",
        "phpunit/phpunit": "^10.5"
    },
    "conflict": {
        "roave/security-advisories": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "fix": "php-cs-fixer fix --config=.php-cs-fixer.php"
    }
}
